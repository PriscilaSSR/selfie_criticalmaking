<body>

<div class="container">
    <h1 id="styleLabel">Original</h1>

    <div class="image-stack" id="imageStack">
        <img src="style0.jpg" class="layer active" alt="Style 0">
        <img src="style1.jpg" class="layer" alt="Style 1">
        <img src="style2.jpg" class="layer" alt="Style 2">
        <img src="style3.jpg" class="layer" alt="Style 3">
    </div>

    <div class="controls">
        <input type="range" id="styleSlider" min="0" max="3" step="0.01" value="0">
        <p class="hint">Slide to transform the face</p>
    </div>
</div>

<script>
    const slider = document.getElementById('styleSlider');
    const images = document.querySelectorAll('.layer');
    const label = document.getElementById('styleLabel');

    // List your style names here to match the image order
    const styleNames = [
        "Original",
        "Cyberpunk",
        "Oil Painting",
        "Vector Art"
    ];

    slider.addEventListener('input', (e) => {
        const value = parseFloat(e.target.value);
        
        // Update Label
        const labelIndex = Math.round(value);
        label.innerText = styleNames[labelIndex];

        // Update Opacity for smooth crossfade
        images.forEach((img, index) => {
            let opacity = 0;
            
            // Logic to fade between images
            if (value >= index && value <= index + 1) {
                // Current image fading out as we move right
                opacity = 1 - (value - index);
            } else if (value >= index - 1 && value <= index) {
                // Next image fading in as we move right
                opacity = value - (index - 1);
            }

            img.style.opacity = opacity;
        });
    });
</script>

</body>
